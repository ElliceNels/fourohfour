{
    "app_name": "app",

    "server": {
      "host": "0.0.0.0",
      "port": 4004,
      "debug": false,
      "url": "https://fourohfour.gobbler.info"
    },

    "logging": {
      "level": "INFO",
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
      "file_path": "logs/app.log"
    },

    "database": {
      "db_name": "fourohfour",
      "db_host": "127.0.0.1",
      "db_port": 3306,
      "pool": {
        "size": 5,
        "max_overflow": 10,
        "timeout": 30,
        "recycle": 1800,
        "pre_ping": true
      }
    },

    "jwt": {
      "access_token_expires_hours": 1,
      "refresh_token_expires_days": 7
    },

    "spk": {
      "max_age_days": 7
    },

    "otpk": {
      "min_unused_count": 10
    }
}